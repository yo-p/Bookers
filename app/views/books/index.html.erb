<h1>Books</h1>

<table width="748px" height='380px'>
<thead>
<tr>
<th width="198px">title</th>
<th width="198px">body</th>
<th width="147px"></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
<%= link_to "show", book_path(book.id) %>
<%= link_to "edit", edit_book_path(book.id) %>
<%= link_to "delete", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
</td>
</tr>
<% end %>
</tbody>
</table>

<h1>New Book</h1>

<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
 <div class="alert-warning">
  <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>
  </ul>
 </div>
<% end %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>